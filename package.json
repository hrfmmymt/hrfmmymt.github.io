{
  "name": "hrfmmymt.github.io",
  "version": "1.0.0",
  "description": "Based on frontend-starter-2016",
  "scripts": {
    "css": "npm run lint:css && postcss -c ./.postcssrc.json",
    "lint:css": "stylelint ./src/**/*.css",
    "watch:css": "postcss -c ./.postcssrc.json -w --map",
    "js": "npm run lint:js && browserify -t babelify ./src/js/script.js | uglifyjs -mc > ./dist/js/script.js",
    "lint:js": "eslint src",
    "uglify:js": "uglifyjs ./dist/js/script.js -m -o ./dist/js/script.js",
    "watch:js": "watchify -t babelify ./src/js/script.js -o 'uglifyjs -cm > ./dist/js/script.js' -d -v",
    "serve": "browser-sync start --server --files './index.html, ./dist/css/*.css, ./dist/js/*.js' --config ./bs-config.js",
    "watch": "npm run serve & npm run watch:css & npm run watch:js",
    "build": "npm run css && npm run js",
    "test": "npm run lint:css && npm run lint:js"
  },
  "author": "hrfmmymt",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.1.1",
    "cssnano": "^3.5.2",
    "postcss": "^5.2.6",
    "postcss-cli": "^2.6.0",
    "postcss-custom-properties": "^5.0.1",
    "postcss-mixins": "^4.0.1",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^1.4.1",
    "stylelint": "^7.2.0",
    "uglify-js": "^2.7.5",
    "watchify": "^3.7.0"
  }
}
